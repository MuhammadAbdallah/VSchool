@model VSchool.ModelView.StudentViewModel
@{
    ViewBag.Title = "Create";
    Layout = null;
}
@using (Html.BeginForm("Create", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();

    <div class="form-group">
        <label>Name</label>
        @Html.EditorFor(m => m.Name, new {htmlAttributes=new { @class = "form-control", @required="required" } })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.EditorFor(m => m.Email, new {htmlAttributes = new { @class = "form-control", @required = "required" } })
    </div>
    <div class="form-group ">
        <label>Gender</label>
        @Html.DropDownListFor(m => m.Genderd, ViewBag.genderId as SelectList, "Select Gender", new { @class = "form-control"} )
    </div>
    <div class=" form-group">
        <label>Upload Image</label>
        <input type="file" name="studentImage" id="attachmemntId" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success form-control" value="Add" />
    </div>

}

