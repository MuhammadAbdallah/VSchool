@model VSchool.Models.StudentGrade
@{
    ViewBag.Title = "SubmitDegree";
    Layout = null;
}


@using (Html.BeginForm("SubmitDegree", "StudentsGrades", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(studentGrade=> studentGrade.Id)
    <div class="form-group">
        <label>Student Name</label>
        @Html.DropDownListFor(studentGrade => studentGrade.StudentId, ViewBag.students as SelectList, "Select Student", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Subject Name</label>
        @Html.DropDownListFor(studentGrade => studentGrade.SubjectId, ViewBag.subjects as SelectList, "Select Subjects", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Degree</label>
        @Html.EditorFor(studentGrade=> studentGrade.Degree,new {htmlAttributes = new { @class = "form-control"}})
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success form-control" value="Submit" />
    </div>

}



